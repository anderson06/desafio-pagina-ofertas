extends layout

block content
	script#option-template(type="text/x-handlebars-template")
		|{{#each this}}
		.option
			.col1
				h3.option-title {{title}}
				p.option-texto {{description}}
			.col2
				p.option-title.saidas
					strong Saídas:
				|{{#each from}}
				p.option-texto {{this}}
				|{{/each}}
			.col3
				p.numero-destaque {{daily}} #[i.diaria]
				p.option-attr Diárias
				hr.separador-attrs
				p.numero-destaque 1 #[i.pessoa]
				p.option-attr Pessoa
			.col4
				p.tipo-tarifa.reembolsavel $ Tarifa não reembolsável
				p.option-value Por apenas: #[strong.value R$ #[span {{price}}]] taxas em até 10x
				button.option-btn Quero ir
		|{{/each}}

	script#optiontag-template(type="text/x-handlebars-template").
		<option value="">Escolha</option>
		{{#each this}}
			<option {{#if selected}}selected{{/if}}>{{text}}</option>
		{{/each}}

	.container
		header
			h1.offer-title= title
			p.offer-subtitle.bold= location
			p.offer-subtitle= description

		section.gallery-section
			ul.gallery#gallery
				each photo in photos
					li
						figure.offer-fig
							img(src=photo alt="" width="940px" height="370px")
							figcaption.offer-figcap Exterior do Hotel

			nav.gallery-nav
				ul#gallery-nav.gallery-thumbs
					each photo, i in photos
						if (i < 9)
							li.gallery-thumb(data-index=i)
								a
									img(src=photo alt="" width="90px" height="60px")

					if (photos.length >= 9)
						li.gallery-thumb.last(data-index=i)
								a
									img(src=photos[9] alt="" width="90px" height="60px")

		section.options-section
			nav.options-header
				h2.options-title Escolha sua melhor opção
				.options-controls
					div.options-control
						label(for="saida").options-control-label Saídas
						select.options-control-select#saida
							option Escolha
					div.options-control
						label.options-control-label(for="n-diarias") Nº de diárias
						select.options-control-select.diarias#n-diarias
							option Escolha
			.options#options
